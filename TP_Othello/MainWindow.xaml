<Window x:Class="TP_Othello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP_Othello"
        xmlns:customControl="clr-"
        mc:Ignorable="d"
        Title="ArcOthello Grava Herbelin" Height="607.5" Width="827">
    <DockPanel HorizontalAlignment="Stretch">
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button x:Name="btnLoadGame" ToolTip="Load a game" Margin="3" Click="btnLoadGame_Click" IsEnabled="True">
                    <StackPanel>
                        <Image Source="./Resources/open.ico" Height="16"></Image>
                        <TextBlock Foreground="Black">Load</TextBlock>
                    </StackPanel>
                </Button>
                <Button x:Name="btnSaveGame" ToolTip="Save the current game" Margin="3" Click="btnSaveGame_Click" IsEnabled="True">
                    <StackPanel>
                        <Image Source="./Resources/save.ico" Height="16"></Image>
                        <TextBlock Foreground="Black">Save</TextBlock>
                    </StackPanel>
                </Button>
                <Button ToolTip="About this app..." x:Name="btnOpenCredits" Click="btnOpenCredits_Click" IsEnabled="True">
                    <StackPanel>
                        <Image Source="./Resources/mark.png" Height="16"></Image>
                        <TextBlock>About</TextBlock>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <StackPanel DockPanel.Dock="Left">
            <TextBlock Margin="5,0,5,0">
                Player 1
            </TextBlock>
        </StackPanel>
        <StackPanel DockPanel.Dock="Right">
            <TextBlock Margin="5,0,5,0">
                Player 2
            </TextBlock>
        </StackPanel>
        <local:OthelloBoard x:Name="board" Height="Auto" Width="Auto">
            
        </local:OthelloBoard>
        
    </DockPanel>
</Window>
