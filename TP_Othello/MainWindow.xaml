<Window x:Class="TP_Othello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TP_Othello"
        xmlns:customControl="clr-"
        mc:Ignorable="d"
        Title="ArcOthello Grava Herbelin" Height="607.5" Width="827">
    <DockPanel HorizontalAlignment="Stretch">
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>

            </ToolBar>
        </ToolBarTray>
        <StackPanel DockPanel.Dock="Left" Margin="0,0.2,0,-0.4">
            <TextBlock Margin="5,0,5,0">
                Player 1
            </TextBlock>
            <TextBlock x:Uid="timerP1"  Margin="5,0,5,0" Text="{Binding TimeWhite, Mode= OneWay}" />
            <TextBlock x:Uid="scoreP1"  Margin="5,0,5,0" Text="{Binding ScoreWhite, Mode= OneWay}" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Right">
            <TextBlock Margin="5,0,5,0">
                Player 2
            </TextBlock>
            <TextBlock x:Uid="timerP2"  Margin="5,0,5,0" Text="{Binding TimeBlack, Mode= OneWay}" />
            <TextBlock x:Uid="scoreP2"  Margin="5,0,5,0" Text="{Binding ScoreBlack, Mode= OneWay}" />
        </StackPanel>
        <local:BoardView x:Name="boardView" Height="Auto" Width="Auto">

        </local:BoardView>

    </DockPanel>
</Window>
